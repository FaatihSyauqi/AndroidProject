<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tif16.sari.kartika.tutorial.Fragment.DeskripsiFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bapa"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/deskripsi"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="10dp"
        tools:context=".DeskripsiFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Detail Info"
                    android:textSize="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="60dp" />
                <TextView
                    android:id="@+id/ulasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ulasan Tempat"
                    android:textSize="15dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ini deskripsi"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
