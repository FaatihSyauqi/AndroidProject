<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tif16.sari.kartika.tutorial.Fragment.DeskripsiFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bapa"/>

    <FrameLayout
        android:id="@+id/deskripsi_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="210dp"
        tools:context=".DeskripsiFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="30dp"
                    android:text="Detail Info"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pengantar_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:hint="Deskripsi dari tempat " />

                <TextView
                    android:id="@+id/ulasan_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:text="Ulasan Tempat"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
